<Window x:Class="HomeAssistantNet.Win.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeAssistantNet.Win"
        mc:Ignorable="d"
        Title="HomeAssistant Net for Windows" Height="450" Width="800">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid Visibility="{Binding IsConnected, Converter={StaticResource BooleanToVisibilityConverter}}"> 
            
        </Grid>
        <Grid>
            
        </Grid>
    </Grid>
    
</Window>
